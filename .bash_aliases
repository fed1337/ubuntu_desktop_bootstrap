# cmd overrides
alias ll='ls -alFh'
alias gh='history|grep'

# colors
alias ip="ip -c"
alias dmesg="dmesg --color=always -T"
alias fdisk="fdisk --color=always"
alias pcregrep="pcregrep --color=always"
alias watch="watch --color"
alias diff="diff --color=always"
alias vdir="vdir --color=always"

# human readable
alias df="df -h"
alias du="du -h"
alias rsync="rsync -h"
